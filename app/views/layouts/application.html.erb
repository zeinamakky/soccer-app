      <!-- Top bar ends -->
      
      <!-- Header two Starts -->
      <div class="header-2">
      
        <!-- Container -->
        <div class="container">
          <div class="row">
            <div class="col-md-3">
              <!-- Logo section -->
              <div class="logo">
                <h1><a href="/"><i class="fa fa-laptop"></i> Soccer Watch</a></h1>
              </div>
            </div>
            <div class="col-md-9">
            
              <!-- Navigation starts.  -->
              <div class="navy">      
                <ul>
                <!-- Main menu -->
                  <% if current_pub_user == nil && current_user_login == nil %>

                    <li><a href="#">PUB OWNERS</a>
                      <ul>
                        <li><a href="/pub_users/sign_up">Sign up</a> </li>
                        <li><a href="/pub_users/sign_in">Sign in</a></li>
                      </ul>
                    </li>

                  <% elsif current_pub_user %>
                    <li><a href="#">PUB OWNERS</a>
                      <ul>
                        <li>
                        <%= link_to "Sign out", "/pub_users/sign_out", method: :delete %>
                        </li>
                      
                        <li><a href="/pubs?owner=mypubs">Your pubs</a></li>                
                        <li><a href="/pubs/new">Add a Pub</a></li>
                      
                    </ul>
                  </li><% end %>
                
                  
                  <% if current_user_login == nil && current_pub_user == nil %>
                  <li><a href="#">FANS</a>
                    <ul>
                      <li><a href="/user_logins/sign_up">Sign up</a></li>
                      <li><a href="/user_logins/sign_in">Sign in</a></li>
                    </ul>
                  </li>
                  <% elsif current_user_login %>
                  <li><a href="#">FANS</a>
                    <ul>
                      <li><%= link_to "Sign out", "/user_logins/sign_out", method: :delete %></li>
                
                      <% if current_user_login.user == nil %>
                       <li><a href="/users/new">Create your profile</a></li>
                      <% else %>
                       <li><%= link_to "View your profile", "/users/#{current_user_login.user.id}" %></li>
                       
                       <li><%= link_to "Edit your profile", "/users/#{current_user_login.user.id}/edit" %></li>
                      <% end %> 
                    </ul>
                  </li>
                  <%end%>
                  
                  <li><a href="/teams">Teams</a></li>

                  <li><a href="/pubs">Pubs</a></li>
                  
                  <li><a href="/games">Games</a></li>

                </ul>
              </div>              
              <!-- Navigation ends -->
              
            </div>
            </div>
            
          
        </div>
        <div class="divider-6"></div>
      </div>
  
