<h1>Edit</h1>

<% if current_user_login %>
<%= form_tag "/users/#{@user.id}", class: "form-horizontal",:multipart => true, method: :patch do %>
  <div class="form-group">
    <%=label_tag :first_name, "First name", class: "col-sm-2 control-label" %>
    <%= text_field_tag :first_name, @user.first_name, class: "col-sm-10" %>
  </div>

  <div class="form-group">
    <%=label_tag :last_name, "Last Name", class: "col-sm-2 control-label" %>
    <%= text_field_tag :last_name, @user.last_name, class: "col-sm-10" %>
  </div>
  <div class="form-group">
    <%=label_tag :description, "A few words about you", class: "col-sm-2 control-label" %>
    <%= text_field_tag :description, @user.description, class: "col-sm-10" %>
  </div>
  <div class="form-group">
    <%=label_tag :twitter_username, "Twitter username", class: "col-sm-2 control-label" %>
    <%= text_field_tag :twitter_username, @user.twitter_username, class: "col-sm-10" %>
  </div>
  <div class="form-group">
    <%=label_tag :fb_username, "Facebook", class: "col-sm-2 control-label" %>
    <%= text_field_tag :fb_username, @user.fb_username, class: "col-sm-10" %>
  </div>
  <div class="form-group">
    <%=label_tag :avatar, "Picture", class: "col-sm-2 control-label" %>
    <%= text_field_tag :avatar, @user.avatar, class: "col-sm-10" %>
  </div>
  <div class="form-group">
    <%= label_tag :file, "Avatar", class: "col-sm-2 control-label" %> 
    <%= file_field_tag :file %>
  </div>
  <div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= submit_tag "Submit" %>
  </div>
  </div>
<% end %>
<% end %>
