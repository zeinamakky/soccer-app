<h1>Create your profile</h1>

<% if current_user_login %>

  <%= form_tag '/users', class: "form-horizontal", :multipart => true, method: :post do %>
    <div class="form-group">
      <%=label_tag :first_name, "First name", class: "col-sm-2 control-label" %>
      <%= text_field_tag :first_name, @first_name, class: "col-sm-10" %>
    </div>

    <div class="form-group">
      <%=label_tag :last_name, "Last Name", class: "col-sm-2 control-label" %>
      <%= text_field_tag :last_name, @last_name, class: "col-sm-10" %>
      <%= hidden_field_tag :email, current_user_login.email %>
    </div>
    
    <div class="form-group">
      <%=label_tag :description, "A few words about you", class: "col-sm-2 control-label" %>
      <%= text_field_tag :description, @user.description, class: "col-sm-10" %>
    </div>
    <div class="form-group">
      <%=label_tag :twitter_username, "Twitter username", class: "col-sm-2 control-label" %>
      <%= text_field_tag :twitter_username, @twitter_username, class: "col-sm-10" %>
    </div>
    <div class="form-group">
      <%=label_tag :fb_username, "Facebook", class: "col-sm-2 control-label" %>
      <%= text_field_tag :fb_username, @fb_username, class: "col-sm-10" %>
    </div>
    <div class="form-group">
      <%=label_tag :avatar, "Link to a photo", class: "col-sm-2 control-label" %>
      <%= text_field_tag :avatar, @avatar, class: "col-sm-10" %>
    </div>
    

    <div class="form-group">
      <%= label_tag :file, "Upload a photo", class: "col-sm-2 control-label" %> 
      <%= file_field_tag :file %>
    </div>



    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= submit_tag "Submit" %>
      </div>
    </div>
  <% end %>
  
<% end %>