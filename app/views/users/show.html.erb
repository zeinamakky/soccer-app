<!-- V Card starts -->
<div class="v-card" >
  <!-- Header -->
  <header>
    <ul class="list-inline">
      <li class="active"><a href="#home" data-toggle="tab">Home</a></li>
      <li><a href="#teams" data-toggle="tab">My Teams</a></li>
      <li><a href="#games" data-toggle="tab">My Games</a></li>
      <li><a href="#messages" data-toggle="tab">Messages</a></li>
    </ul>
  </header>
  <!-- tab Content -->
  <div class="tab-content">
    <!-- Tab Pane - Home -->
    <div class="tab-pane fade in active" id="home">
      <!-- Home Image -->
      <div class="vcard-img">
        <a href="#"><img src="<%= @user.avatar %>" alt="" class="img-responsive img-thumbnail" /></a>
      </div>
      <div class="vcard-content">
        <!-- Name -->
        <h2><%= @user.first_name %> <%= @user.last_name %></h2>
        <p><%= @user.description %></p>
        <% if current_user_login.id == @user.user_login_id %>
        <p><%= link_to "Edit your profile", "/users/#{@user.id}/edit" %></p>
        <% end %>
        <!-- Social media links -->
        <div class="brand-bg">
          <% if @user.fb_username %><a href="http://facebook.com/<%= @user.fb_username%>" target="_blank" class="facebook b-tooltip" title="Facebook"><i class="fa fa-facebook square-2 rounded-1"></i></a><%end%>
          <% if @user.twitter_username %><a href="http://twitter.com/@<%= @user.twitter_username%>" target="_blank" class="twitter b-tooltip" title="Twitter"><i class="fa fa-twitter square-2 rounded-1"></i></a><% end %>
        </div>
        <hr />
        
      </div>
      <!-- Clearfix -->
      <div class="clearfix"></div>
    </div>
    
    <!-- Tab Pane - Education & Experience -->
    <div class="tab-pane fade" id="qualification">
      <div class="education">
        <h4><i class="fa fa-graduation-cap color"></i> Education</h4>
        <hr />
        <div class="row">
          <div class="col-md-6 col-sm-6">
            <div class="education-item">
              <!-- Eudcation detail and year -->
              <h5>B.E (Computer Science) <small>2006-2010</small></h5>
              <p>At vero eos et accusamus odio dignissimos voluptatum et iusto odio dignissimos voluptatum deleniti atque corrupti quos.</p>
            </div>
          </div>
          <div class="col-md-6 col-sm-6">
            <div class="education-item">
              <h5>MCA (Computer Application) <small>2010-2012</small></h5>
              <p>At vero eos et accusamus odio dignissimos voluptatum et iusto odio dignissimos voluptatum deleniti atque corrupti quos.</p>
            </div>
          </div>
        </div>
      </div>
      <hr />
      <div class="experience">
        <h4><i class="fa fa-database color"></i> Experience</h4>
        <hr />
        <div class="row">
          <div class="col-md-6 col-sm-6">
            <!-- Experience Detail -->
            <div class="experience-item">
              <!-- Experience detail and year -->
              <h5>Programmer - AshoApps <small>2012-2013</small></h5>
              <p>At vero eos et accusamus odio dignissimos voluptatum et iusto odio dignissimos voluptatum deleniti atque corrupti quos.</p>
            </div>
          </div>
          <div class="col-md-6 col-sm-6">
            <!-- Experience Detail -->
            <div class="experience-item">
              <h5>Developer - Rage Solution <small>2013-2014</small></h5>
              <p>At vero eos et accusamus odio dignissimos voluptatum et iusto odio dignissimos voluptatum deleniti atque corrupti quos.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Tab Pane - Portfolio -->
    <% if current_user_login %>         

      <div class="tab-pane fade" id="games">
        <!-- Portfolio --> 
        <h4>My Games</h4>
        <hr />
        <div class="row">
    
          <% if @user_events != [] %>
            <% @user_games.each do |user_game| %>
              <h4><%= user_game.game.date.strftime("%A, %B %d") %></h4>
              <p><strong><%= user_game.game.home_team_name %> vs <%= user_game.game.away_team_name %> </strong></p>
              <p><strong>Where: </strong><a href="/pubs/<%= user_game.pub_id %>"><%= user_game.pub.name %></a></p>
              
                 
                  <div ng-app="app">
                  <div ng-controller="gamesCtrl" ng-init="setup()">
                  <addtocalendar

                  start-date="<%= user_game.game.date.strftime("%Y%m%dT%H%M%S") %>"
                  end-date="<%= (user_game.game.date + 2*60*60).strftime("%Y%m%dT%H%M%S")%>"
                  title="<%= user_game.game.home_team_name %> vs <%= user_game.game.away_team_name %>"
                  location="<%= user_game.pub.name %>"
                  class-name="btn btn-sm btn-default dropdown-toggle"
                  description="Football match at <%= user_game.pub.name %>. Address: <%= user_game.pub.address1 %>"
                  btn-text="Add to calendar">
                  </addtocalendar>
             

              <hr></div></div>

            <% end %>
          <% else %>
            <h3>You have no upcoming events.</h3>
          <% end %>
        </div>
      </div>
    <% end %>
    <!-- Tab Pane -->
    <div class="tab-pane fade" id="contact">
      <!-- Contact Content -->
      <div class="contact-content">
        <div class="row">
          <div class="col-md-6 col-sm-6">
            <!-- Contact Form -->
            <div class="contact-form">
              <h4><i class="fa fa-envelope color"></i> Contact Form</h4>
              <hr />
              <form class="form" role="form">
                <div class="form-group">
                  <label class="sr-only" for="name">Your Name</label>
                  <input type="text" class="form-control" id="name" placeholder="Your Name">
                </div>
                <div class="form-group">
                  <label class="sr-only" for="mail">Email</label>
                  <input type="email" class="form-control" id="mail" placeholder="Your Mail Id">
                </div>
                <div class="form-group">
                  <label class="sr-only" for="comments">Comments</label>
                  <textarea class="form-control" id="comments" rows="6" placeholder="Something..."></textarea>
                </div>
                <button type="submit" class="btn btn-red">Submit</button>&nbsp;
                <button type="submit" class="btn btn-white">Reset</button>
              </form>
            </div>
          </div>
          <div class="col-md-6 col-sm-6">
            <!-- Map -->
            <div class="map">
              <iframe src="https://maps.google.co.in/?ie=UTF8&amp;ll=12.956215,77.593517&amp;spn=0.10188,0.169086&amp;t=m&amp;z=13&amp;output=embed"></iframe>
            </div>
            <div class="contact-detail">
              <p><i class="fa fa-building-o bg-red"></i>89 A, Bharathi Nagar,  Bangalore-89</P>
              <p><i class="fa fa-envelope bg-green"></i>info@uksolution.com</p>
              <p><i class="fa fa-phone bg-lblue"></i>+ (323) 839 8203</P>
            </div>
          </div>
        </div>
      </div>  
    </div>
  </div>
</div>

<!-- V Card ends -->

